{
  "name": "stress-test",
  "version": "1.0.0",
  "description": "K6 stress testing project for load testing web applications",
  "main": "test.js",
  "scripts": {
    "test": "k6 run test.js",
    "test:smoke": "k6 run --vus 1 --duration 30s test.js",
    "test:load": "k6 run --vus 100 --duration 5m test.js",
    "test:stress": "k6 run --vus 500 --duration 10m test.js",
    "test:spike": "k6 run --vus 1000 --duration 2m test.js",
    "test:login": "k6 run login-test.js",
    "test:login-load": "k6 run --vus 50 --duration 2m login-test.js",
    "test:login-stress": "k6 run --vus 100 --duration 5m login-test.js",
    "test:capacity": "k6 run capacity-test.js",
    "test:capacity-quick": "k6 run --vus 100 --duration 5m capacity-test.js",
    "test:capacity-full": "k6 run capacity-test.js --out json=capacity-results.json"
  },
  "keywords": [
    "k6",
    "load-testing",
    "stress-testing",
    "performance"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "k6": "^0.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}